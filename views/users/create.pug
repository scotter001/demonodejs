extends ../layouts/common
block content
	.container
		h1 hello baby
		if errors
			each error in errors
				.alert.alert-danger= error
		form(action="/users/create", method="POST")
			.form-group
				label(for="name") Name
				input.form-control.rounded-0#name(type="text",name="name" ,value = values ? values.name : "")
			.form-group
				label(for="phone") Name
				input.form-control.rounded-0#phone(type="text",name="phone" ,value = values ? values.phone : "")
			button.btn.btn-primary(type="submit") Create